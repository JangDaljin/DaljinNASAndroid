<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/drawerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:id="@+id/topLayout"
                    android:layout_width="match_parent"

                    android:layout_margin="5dp"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <ProgressBar
                        android:progressDrawable="@drawable/storageprogressbar"
                        android:max="100"
                        android:progress="50"

                        android:id="@+id/pgbStorage"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="25dp"
                        />

                <TextView
                        android:id="@+id/tvStorage"
                        android:layout_width="0dp"
                        android:gravity="center"
                          android:layout_weight="3"
                          android:layout_height="25dp"
                        android:textSize="15dp"
                          android:text="TEST"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/columnNameLayout"
                    android:layout_below="@+id/topLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    xmlns:android="http://schemas.android.com/apk/res/android">

                <CheckBox android:id="@+id/chbAll"
                          android:gravity="center"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="5dp"/>/>

                <TextView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:text="파일명"
                />

                <TextView android:layout_width="0dp"
                          android:gravity="center"
                          android:layout_weight="2"
                          android:layout_height="wrap_content"
                          android:layout_marginHorizontal="5dp"
                          android:text="크기"/>

                <TextView android:layout_width="0dp"
                          android:gravity="center"
                          android:layout_weight="4"
                          android:layout_height="wrap_content"
                          android:text="날짜"
                          android:layout_marginRight="5dp"/>/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/fileView"
                    android:layout_below="@+id/columnNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            <android.support.design.widget.BottomNavigationView
                    android:id="@+id/navBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:background="?android:attr/windowBackground"
                    android:layout_alignParentBottom="true"
                    app:menu="@menu/bottommenu"
                    app:labelVisibilityMode="labeled"/>

        </RelativeLayout>


        <android.support.design.widget.NavigationView
                android:id="@+id/rightSizeView"
                android:layout_gravity = "right"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                app:menu="@menu/rightsidemenu"
                app:headerLayout="@layout/rightsideheader"
        />

    <!--
    <LinearLayout
            android:id="@+id/leftSideView"

<RelativeLayout
        android:background="@color/logobackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

        <ImageView
                android:layout_gravity="center"
                android:src="@drawable/daljin_logo_horizon"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginBottom="40dp"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/signupTvID"
                    android:textColor="@color/logobackgroundtext"
                    android:text="ID"
                    android:fontFamily="@font/ssangmundongx"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent"/>

            <EditText
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@color/logobackgroundtext"
                    android:fontFamily="@font/nanumx"
                    android:id="@+id/signupEditTextID"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/logobackgroundtext2"
                    android:hint="아이디 입력"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:inputType="text"/>


            <Button
                    android:textColor="#000"
                    android:fontFamily="@font/ssangmundongx"
                    android:textSize="12dp"
                    android:id="@+id/singupButtonIDcheck"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:text="CHECK"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/signupTvPW"
                    android:textColor="@color/logobackgroundtext"
                    android:fontFamily="@font/ssangmundongx"
                    android:textSize="20dp"
                    android:text="PW"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent"/>
            <EditText
                    android:maxLines="1"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/logobackgroundtext"
                    android:fontFamily="@font/nanumx"
                    android:id="@+id/signupEditTextPW"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColorHint="@color/logobackgroundtext2"
                    android:imeOptions="actionNext"
                    android:hint="영문,숫자,기호 조합 8자리"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/signupTvPWcheck"
                    android:textColor="@color/logobackgroundtext"
                    android:fontFamily="@font/ssangmundongx"
                    android:textSize="20dp"
                    android:text="PW CHECK"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent"/>
            <EditText
                    android:maxLines="1"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/logobackgroundtext"
                    android:fontFamily="@font/nanumx"
                    android:id="@+id/signupEditTextPWcheck"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColorHint="@color/logobackgroundtext2"
                    android:imeOptions="actionNext"
                    android:hint="영문,숫자,기호 조합 8자리"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/signupTvCode"
                    android:textColor="@color/logobackgroundtext"
                    android:fontFamily="@font/ssangmundongx"
                    android:textSize="20dp"
                    android:text="CODE"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent"/>
            <EditText
                    android:maxLines="1"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@color/logobackgroundtext"
                    android:fontFamily="@font/nanumx"
                    android:id="@+id/signupEditTextCode"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/logobackgroundtext2"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:hint="****"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="15dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:textColor="#000"
                    android:fontFamily="@font/ssangmundongx"
                    android:textSize="15dp"
                    android:id="@+id/signupButtonSubmit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="SIGN UP"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>




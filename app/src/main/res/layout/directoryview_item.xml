<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
            android:id="@+id/directoryViewImg"
            android:layout_marginBottom="5dp"
            android:src="@drawable/directoryicon"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

    <TextView
            android:id="@+id/directoryViewTvName"
            android:layout_toRightOf="@+id/directoryViewImg"
            android:layout_centerVertical="true"
            android:fontFamily="@font/alienx"
            android:textSize="20dp"
            android:textColor="@color/dodgerblue"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ROOT"/>

    <TextView
            android:layout_below="@+id/directoryViewImg"
            android:background="@color/dimgray"
            android:layout_width="380dp"
            android:layout_centerHorizontal="true"
            android:layout_height="1dp"/>

</RelativeLayout>

